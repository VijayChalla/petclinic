node 
  {
	  def mvnHome = tool 'mvn'
	  
          
	  stage ('workspace clean') {
	  cleanWs()	         
                 
	  }
	  stage('Code Checkout')
	  {
		  git url: 'https://github.com/knagu/petclinic.git'
	  }	  
          stage('Build Stage')
	  {	   
	  sh "${mvnHome}/bin/mvn -B clean install package"
	  echo "Build Successful"
	  }
          //stage('Test') {
	  //sh "${mvnHome}/bin/mvn -B test"
	  //echo "Tests successful"
	  //}
          //stage('Sonar Analysis')
	  //{
            //    sh "${mvnHome}/bin/mvn sonar:sonar"
		
		
	  //}
         stage('Deploy docker image to Nexus'){
          withCredentials( [usernamePassword( credentialsId: 'nexus', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]){
                //sh label: '', script: '''docker build -t 10.0.1.163:8082/petclinic:$BUILD_NUMBER .
                //docker login --username $USERNAME --password $PASSWORD 10.0.1.163:8082
                //docker build -t 10.0.1.163:8082/petclinic:latest .
                //docker push 10.0.1.163:8082/petclinic:$BUILD_NUMBER
                //docker push 10.0.1.163:8082/petclinic:latest'''
                
                sh label: '', script: '''
                ip=`curl -s http://169.254.169.254/latest/meta-data/local-ipv4`
                curl $ip:32491
                sudo docker build -t $nodedns:8082/petclinic:$BUILD_NUMBER .
                sudo docker login --username $USERNAME --password $PASSWORD $nodedns:8082
                sudo docker build -t $nodedns:8082/petclinic:latest .
                sudo docker push $nodedns:8082/petclinic:$BUILD_NUMBER
                sudo docker push $nodedns:8082/petclinic:latest'''
          }
     }
          
  }
