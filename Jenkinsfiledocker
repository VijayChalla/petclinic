node 
  {
	  def mvnHome = tool 'mvn'
	  
          
	  stage ('workspace clean') {
	  cleanWs()	         
                 
	  }
	  stage('Code Checkout')
	  {
		  git url: 'https://github.com/knagu/petclinic.git'
	  }	  
          stage('Build Stage')
	  {	   
	  sh "${mvnHome}/bin/mvn -B clean install package"
	  echo "Build Successful"
	  }
          //stage('Test') {
	  //sh "${mvnHome}/bin/mvn -B test"
	  //echo "Tests successful"
	  //}
          //stage('Sonar Analysis')
	  //{
            //  sh "${mvnHome}/bin/mvn sonar:sonar"				
	  //}
         stage('Deploy docker image to Nexus'){
          withCredentials( [usernamePassword( credentialsId: 'nexus', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]){
                                              
                
                sh label: '', script: '''                
                ip=`curl -s http://169.254.169.254/latest/meta-data/local-ipv4`
                docker build -t localhost:31313/petclinic:$BUILD_NUMBER .
                docker login --username $USERNAME --password $PASSWORD localhost:31313
                docker build -t localhost:31313/petclinic:latest .
                docker push localhost:31313/petclinic:$BUILD_NUMBER
                docker push localhost:31313/petclinic:latest'''
          }
     }
          
  }
